      <li>
        <a href="https://annict.com/@ewsn" target="_blank" rel="noopener noreferrer">Annict</a>
      </li>
    </ul>
  </Card>
</Layout>

<style>
  .list-inside {
    list-style-position: inside;
  }

  .mb-1 {
    margin-bottom: 0.25rem;
  }

  .mb-2 {
    margin-bottom: 0.5rem;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
</style>
